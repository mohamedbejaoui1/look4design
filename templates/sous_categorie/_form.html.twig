{{ form_start(form) }}


<div class="row clearfix">
    <div class="col-md-12 mb-3">

        {{ form_widget(form.image) }}
    </div>
    <div class="col-md-12 m-3">
        <div class="row">
            <label for="sous_categorie_nom" class="col-sm-2 col-form-label">Nom </label>
            <div class="col-sm-10">
                {{ form_widget(form.nom) }}
            </div>
        </div>
    </div>

    <div class="col-md-12 m-3">
        <div class="row">
            <label for="sous_categorie_description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                {{ form_widget(form.description  ) }}
            </div>
        </div>
    </div>

    <div class="col-md-12 m-3">
        <div class="row">
            <label for="sous_categorie_categorie" class="col-sm-2 col-form-label">Categorie</label>
            <div class="col-sm-10">
                {{ form_widget(form.categorie  ) }}
            </div>
        </div>
    </div>


    {{ form_widget(form._token) }}
    <button class="btn btn-danger waves-effect col-2 offset-10">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}